<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".UploadPhoto">


    <ImageView
        android:id="@+id/imgChoosed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/shutter50" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:onClick="cargar_foto"
        app:srcCompat="@mipmap/up52" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnShareLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="shareLink"
            android:text="Share Link"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="70dp" />

        <Button
            android:id="@+id/btnSharePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sharePhoto"
            android:text="Share Photo"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="200dp" />


        <Button
            android:id="@+id/btnShareVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Video"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="362dp" />


    </LinearLayout>


</RelativeLayout>